<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="320dp"
    android:orientation="vertical"
    android:background="@drawable/bg_login"    
    android:paddingLeft="10dp"
    android:paddingRight="10dp"    
    android:layout_gravity="center" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        
        <ImageView 
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_game3"
            android:layout_marginRight="10dp"/>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            
            android:text="ĐĂNG KÝ NHANH"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"       
        android:layout_marginBottom="16dp">
        
        <EditText
            android:id="@+id/reg_edtxtUsername"             
            android:layout_width="match_parent"
            android:layout_height="40dp"            
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="Tên đăng nhập"
            android:layout_marginBottom="2dp"/>
        
        <EditText
            android:id="@+id/reg_edtxtPassword"            
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:layout_marginBottom="2dp" />
        
        <EditText
            android:id="@+id/reg_edtxtPassword_confirm"            
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:layout_marginBottom="2dp" />    
            
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            
            <EditText 
                android:id="@+id/reg_edtxtCaptcha"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:hint="Mã xác nhận"
                android:background="#fff"
                android:gravity="center_vertical"
            	android:paddingLeft="10dp"
            	android:layout_marginRight="5dp"/>
            
            <ImageView 
                android:id="@+id/reg_imgCaptcha"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:src="@android:color/white"
                android:scaleType="fitXY"
                android:layout_marginRight="5dp"/>
            
            <ImageView 
                android:id="@+id/reg_btnCaptcha_refresh"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/refresh_button"
                android:scaleType="fitXY"/>
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button 
            android:id="@+id/reg_btnRegister"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:background="#f36b37"
            android:text="Đăng ký"
            android:textColor="#fff"            
            android:gravity="center"/>
        
    </LinearLayout>   
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/version"/>

</LinearLayout>
